<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.coole.spisokpost.spisokpost.ElementActivity">

<LinearLayout
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sams1"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginLeft="10dp">
    <TextView
        android:id="@+id/tv1"
        android:text="@string/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tv2"
        android:text="@string/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:textSize="14dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/dotsvertical11"
        android:layout_gravity="right" />
</LinearLayout>

    <TextView
        android:id="@+id/tv3"
        android:text="@string/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:padding="5dp"
        android:textColor="#000000"/>





    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#43000000"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/com11" />

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/bullhorn11"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"/>

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/heart11"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

</LinearLayout>
